<div class="container mt-5">
  <h1 class="text-center mb-4 text-info">Search Results for "<%= @query %>"</h1>

  <% if @blog_posts.any? %>
    <div class="row justify-content-center">
      <% @blog_posts.each do |post| %>
        <div class="col-md-12 mb-4">
          <div class="card shadow-sm border-light">
            <div class="card-body">
              <h2 class="card-title text-center mb-3"> <%= post.title %> </h2>
              <div class="post-body" style="max-height: 200px; overflow-y: auto;">
                <p class="card-text"><%= post.body.truncate(100) %></p>
              </div>
            </div>
            <div class="card-footer text-muted d-flex justify-content-between align-items-center">
              <small class="text-secondary">Posted by: <%= post.user.name %></small>
              <small class="text-muted"><%= time_ago_in_words(post.created_at) %> ago</small>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-danger">No posts found with that title.</p>
  <% end %>
</div>